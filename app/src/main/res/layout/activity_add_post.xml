<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".nav.community.AddPostActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#1566e0"
            android:gravity="center_horizontal"
            android:padding="20dp"
            android:text="게시글 작성"
            android:textStyle="bold"
            android:textColor="#ffffff"
            android:textSize="25sp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingLeft="10dp"
                android:paddingRight="10dp"
                android:text="제목:"
                android:textSize="20sp" />

            <EditText
                android:id="@+id/et_postTitle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:height="48dp"
                android:hint="게시글 제목을 입력해주세요." />

        </LinearLayout>



        <EditText
            android:id="@+id/et_postBody"
            android:layout_width="match_parent"
            android:layout_height="500dp"
            android:hint="내용을 입력하세요"
            android:gravity="top|left"
            android:paddingTop="10dp"
            android:paddingLeft="10dp"
            android:background="#faf7f7"
            android:inputType="textMultiLine"
            android:minHeight="48dp" />

        <Button
            android:id="@+id/btn_submitPost"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="62dp"
            android:layout_marginTop="10dp"
            android:layout_marginRight="62dp"
            android:backgroundTint="#1566e0"
            android:gravity="center"
            android:paddingTop="14dp"
            android:paddingBottom="14dp"
            android:text="완료"
            android:textColor="#ffffff"
            android:textSize="20sp" />
    </LinearLayout>


</RelativeLayout>