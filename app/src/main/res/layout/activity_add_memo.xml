<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activity.memo.AddMemoActivity">

    <include layout="@layout/toolbar" />
    <EditText
        android:id="@+id/add_title_memo"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="이곳에 제목을 입력해주세요"
        android:layout_marginTop="50dp"
        android:paddingTop="12dp"
        android:textColor="@color/black"
        android:textSize="20sp"
        android:textStyle="bold" />

    <EditText
        android:id="@+id/add_content_memo"
        android:layout_width="match_parent"
        android:layout_height="500dp"
        android:layout_below="@+id/add_title_memo"
        android:background="#faf7f7"
        android:gravity="top|left"
        android:hint="이곳에 내용을 입력해주세요"
        android:paddingLeft="20dp"
        android:paddingTop="15dp"
        android:textColor="@color/black"
        android:textSize="15sp" />

    <Button
        android:id="@+id/submit_memo_btn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/add_content_memo"
        android:layout_centerHorizontal="true"
        android:backgroundTint="@color/sky_blue"
        android:text="작성 완료" />


</RelativeLayout>