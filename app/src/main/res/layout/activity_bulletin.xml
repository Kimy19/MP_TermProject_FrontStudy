<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activity.post.PostDetailActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <TextView
            android:id="@+id/bulletinTitle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingLeft="15dp"
            android:paddingTop="8dp"
            android:paddingBottom="10dp"
            android:text="Title"
            android:textColor="@color/black"
            android:textSize="40dp" />

        <TextView
            android:id="@+id/bulletinAuth"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="15dp"
            android:text="Auth"
            android:textColor="@color/black"
            android:textSize="20dp" />

        <TextView
            android:id="@+id/bulletinBody"
            android:layout_width="match_parent"
            android:layout_height="450dp"
            android:paddingLeft="15dp"
            android:paddingTop="20dp"
            android:text="Body"
            android:background="@drawable/blue_border"
            android:textColor="@color/black"
            android:textSize="20dp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            >
        <Button
            android:id="@+id/btn_delpost"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:background="@drawable/ic_baseline_restore_from_trash_24"
            />
        <Button
            android:id="@+id/btn_LikePost"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:background="@drawable/ic_baseline_favorite_24"
            android:layout_marginLeft="127dp"
            />
        <TextView
            android:id="@+id/bulletinLike"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="likes"
            android:textColor="@color/black"
            />
        <Button
            android:id="@+id/btn_modpost"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:background="@drawable/ic_baseline_edit_24"
            android:layout_marginLeft="100dp"
            />

        </LinearLayout>

    </LinearLayout>
</RelativeLayout>